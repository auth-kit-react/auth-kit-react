{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "types": ["jest", "node"],
  "include": ["lib/**/*.ts", "lib/**/*.tsx"],
  "exclude": ["node_modules"]
}
