{
  "name": "auth-kit-react",
  "version": "1.2.14",
  "description": "Auth Kit React is a versatile authentication and authorization package for React applications. It provides a simple and configurable solution for managing user authentication, authorization, and session handling.",
  "main": "index.ts",
  "module": "index.ts",
  "typings": "types/types.d.ts",
  "license": "MIT",
  "author": "Faizan Shaikh",
  "keywords": [
    "authentication",
    "react",
    "authorization",
    "security",
    "jwt",
    "react-auth-kit",
    "auth-kit-react",
    "react-auth",
    "auth-react",
    "next-auth",
    "auth-next",
    "auth",
    "jsonwebtoken",
    "token"
  ],
  "scripts": {
    "build": "yarn lint && yarn format && yarn tsc",
    "start": "react-scripts start",
    "eject": "react-scripts eject",
    "format": "prettier --log-level error --write \"lib/**/*.{ts,tsx,js,json}\"",
    "format:check": "prettier --log-level error --check \"lib/**/*.{ts,tsx,js,json}\"",
    "lint": "eslint ."
  },
  "dependencies": {
    "ky": "^1.1.3",
    "react": "^18.2.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "*"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/auth-kit-react/auth-kit-react"
  },
  "homepage": "https://github.com/auth-kit-react/auth-kit-react/blob/main/README.md"
}
